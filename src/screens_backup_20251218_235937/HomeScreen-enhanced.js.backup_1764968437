import React, { useState, useEffect } from 'react';
import { View, Text, StyleSheet, ScrollView, TouchableOpacity, Alert } from 'react-native';
import ApiService from '../services/api-service';

export default function HomeScreen({ navigation }) {
  const [connectionStatus, setConnectionStatus] = useState('Checking...');
  const [isOnline, setIsOnline] = useState(false);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    checkBackendConnection();
  }, []);

  const checkBackendConnection = async () => {
    try {
      // REPLACED: Using checkServerStatus instead of testConnection
      const result = await ApiService.checkServerStatus();
      
      // Debug logging - FIXED: Using local isOnline state instead of ApiService property
      console.log('üè† HomeScreen connection result:', result);
      console.log('üè† HomeScreen online status:', isOnline);
      
      if (result.success) {
        setConnectionStatus('‚úÖ Backend Connected');
        setIsOnline(true);
      } else {
        setConnectionStatus('‚ùå Connection Failed');
        setIsOnline(false);
      }
    } catch (error) {
      console.error('Connection test failed:', error);
      setConnectionStatus('‚ùå Connection Error');
      setIsOnline(false);
    } finally {
      setIsLoading(false);
    }
  };

  const handleRetryConnection = () => {
    setIsLoading(true);
    checkBackendConnection();
  };

  const menuItems = [
    { title: 'Betting Insights', screen: 'Betting', color: '#1e3a8a', description: 'Get betting odds and predictions' },
    { title: 'Fantasy Advice', screen: 'Fantasy', color: '#059669', description: 'Fantasy basketball recommendations' },
    { title: 'Player Stats', screen: 'Stats', color: '#dc2626', description: 'Player statistics and analytics' },
    { title: 'Live Games', screen: 'Live', color: '#7c2d12', description: 'Live game updates and scores' },
    { title: 'Settings', screen: 'Settings', color: '#4b5563', description: 'App settings and preferences' },
  ];

  return (
    <ScrollView style={styles.container}>
      <View style={styles.header}>
        <Text style={styles.title}>üèÄ NBA Fantasy AI Assistant</Text>
        <Text style={styles.subtitle}>Your personal AI-powered basketball advisor</Text>
      </View>

      <View style={styles.statusCard}>
        <Text style={styles.statusTitle}>System Status</Text>
        <View style={styles.statusRow}>
          <View style={[styles.statusDot, isOnline ? styles.online : styles.offline]} />
          <Text style={styles.statusText}>{connectionStatus}</Text>
        </View>
        {!isOnline && (
          <TouchableOpacity style={styles.retryButton} onPress={handleRetryConnection}>
            <Text style={styles.retryButtonText}>üîÑ Retry Connection</Text>
          </TouchableOpacity>
        )}
      </View>

      <Text style={styles.sectionTitle}>Quick Access</Text>
      
      <View style={styles.menuGrid}>
        {menuItems.map((item, index) => (
          <TouchableOpacity
            key={`menu-${index}`}  // Added key prop here
            style={[styles.menuCard, { backgroundColor: item.color }]}
            onPress={() => navigation.navigate(item.screen)}
          >
            <Text style={styles.menuTitle}>{item.title}</Text>
            <Text style={styles.menuDescription}>{item.description}</Text>
            <Text style={styles.menuArrow}>‚Üí</Text>
          </TouchableOpacity>
        ))}
      </View>

      <View style={styles.infoCard}>
        <Text style={styles.infoTitle}>üìä Recent Updates</Text>
        <Text style={styles.infoText}>‚Ä¢ Backend API is {isOnline ? 'online' : 'offline'}</Text>
        <Text style={styles.infoText}>‚Ä¢ All features are available</Text>
        <Text style={styles.infoText}>‚Ä¢ Mock data fallback enabled</Text>
        <Text style={styles.infoText}>‚Ä¢ Real-time updates: {isOnline ? 'Active' : 'Paused'}</Text>
      </View>

      <View style={styles.tipsCard}>
        <Text style={styles.tipsTitle}>üí° Tips</Text>
        <Text style={styles.tipsText}>‚Ä¢ Check "Fantasy Advice" for daily picks</Text>
        <Text style={styles.tipsText}>‚Ä¢ Use "Betting Insights" for odds</Text>
        <Text style={styles.tipsText}>‚Ä¢ Track live games in "Live Games"</Text>
        <Text style={styles.tipsText}>‚Ä¢ Visit "Settings" to customize</Text>
      </View>

      <TouchableOpacity 
        style={styles.diagnosticsButton}
        onPress={() => navigation.navigate('Diagnostics')}
      >
        <Text style={styles.diagnosticsButtonText}>üêõ Connection Diagnostics</Text>
      </TouchableOpacity>
    </ScrollView>
  );
}

