                  <Text style={styles.featuredStatValue}>{topPlayer?.assists || 'N/A'}</Text>
                  <Text style={styles.featuredStatLabel}>AST</Text>
                </View>
              </View>
            </View>
            <View style={styles.featuredPlayerIcon}>
              <FontAwesome5 name="basketball-ball" size={40} color="rgba(255,255,255,0.2)" />
            </View>
          </View>
          
          <TouchableOpacity style={styles.viewPlayerStatsButton}>
            <Text style={styles.viewPlayerStatsText}>View Advanced Stats</Text>
            <Ionicons name="stats-chart" size={16} color="#FFF" />
          </TouchableOpacity>
        </View>
      </LinearGradient>
    );
  };

  const renderQuickActions = () => (
    <View style={[styles.quickActionsContainer, styles.cardShadow]}>
      <TouchableOpacity style={styles.quickActionButton}>
        <View style={[styles.quickActionIcon, { backgroundColor: '#3b82f620' }]}>
