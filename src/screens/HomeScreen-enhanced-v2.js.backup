    if (players.length === 0) return null;
    
    // Find top player by points
    const topPlayer = [...players].sort((a, b) => (b?.points || 0) - (a?.points || 0))[0];
    
    // FIX: Safely get team name
    const getPlayerTeam = (player) => {
      if (!player) return '';
      if (typeof player.team === 'string') return player.team;
      if (typeof player.team === 'object' && player.team.name) return String(player.team.name);
      return '';
    };
    
    const teamName = getPlayerTeam(topPlayer);
    
    return (
      <LinearGradient
        colors={['#1E293B', '#334155']}
        style={[styles.featuredPlayerCard, styles.cardShadow]}
      >
        <View style={styles.featuredPlayerContent}>
          <View style={styles.featuredPlayerHeader}>
            <Text style={styles.featuredPlayerTitle}>‚≠ê Player of the Day</Text>
            <View style={styles.playerRating}>
              <Ionicons name="star" size={14} color="#FFD700" />
