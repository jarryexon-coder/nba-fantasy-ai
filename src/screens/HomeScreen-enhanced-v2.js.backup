// Main HomeScreen Component - ENHANCED VERSION with Live Games
const HomeScreen = () => {
  // ADDED: Initialize navigation
  const navigation = useNavigation();
  
  // FIXED: Destructure error from "../hooks/useSportsData";
  const { 
    data: { nba, nfl, news: newsData } = {},
    isLoading,
    error, // ADDED: This was missing
    refreshAllData
  } = useSportsData({
    autoRefresh: true,
    refreshInterval: 30000
  });

  const [refreshing, setRefreshing] = useState(false);
  
  // FIXED: Added safe access with optional chaining
  const stats = {
    totalGames: (nba?.games?.length || 0) + (nba?.liveGames?.length || 0),
    liveGames: nba?.liveGames?.length || 0,
    upcomingGames: nba?.games?.filter(g => g?.status === 'scheduled').length || 0,
    avgScore: calculateAvgScore(nba?.games || []),
    playerCount: nba?.players?.length || 0,
    totalPoints: calculateTotalPoints(nba?.players || []),
  };
  
  // Modal states
  const [showSettings, setShowSettings] = useState(false);
  const [showPremiumPaywall, setShowPremiumPaywall] = useState(false);
  const [showDailyLocksPaywall, setShowDailyLocksPaywall] = useState(false);

  // Premium hooks
  const { hasAccess: hasPremiumAccess } = usePremiumAccess();
  const { hasAccess: hasDailyLocks } = useDailyLocks();

  // Helper functions for calculations
  function calculateAvgScore(games) {
    if (!games || games.length === 0) return 0;
    const totalScores = games.reduce((sum, game) => {
      const awayScore = game?.awayTeam?.score || game?.awayScore || 0;
      const homeScore = game?.homeTeam?.score || game?.homeScore || 0;
      return sum + awayScore + homeScore;
    }, 0);
    return (totalScores / games.length).toFixed(1);
  }

  function calculateTotalPoints(players) {
    if (!players || players.length === 0) return 0;
    return players.reduce((sum, player) => sum + (player?.points || 0), 0).toFixed(0);
  }

  const onRefresh = () => {
    setRefreshing(true);
    refreshAllData().catch(err => {
      console.error('Refresh error:', err);
    }).finally(() => {
      setRefreshing(false);
    });
  };

  // Error handling
  if (error) {
    return (
      <View style={styles.centered}>
        <Ionicons name="alert-circle-outline" size={60} color="#ef4444" />
        <Text style={styles.errorText}>Error loading data</Text>
        <Text style={styles.errorSubtext}>
          {typeof error === 'string' ? error : 'Please try again'}
        </Text>
        <TouchableOpacity style={styles.retryButton} onPress={refreshAllData}>
          <Text style={styles.retryButtonText}>Retry</Text>
        </TouchableOpacity>
      </View>
    );
  }

  const renderHeader = () => (
