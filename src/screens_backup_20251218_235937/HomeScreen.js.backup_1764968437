import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  ActivityIndicator,
  FlatList,
} from 'react-native';
import ApiService from '../services/api-service';
import { Ionicons } from '@expo/vector-icons'; // For icons

export default function HomeScreen({ navigation }) {
  const [connectionStatus, setConnectionStatus] = useState('Checking...');
  const [isOnline, setIsOnline] = useState(false);
  const [isLoading, setIsLoading] = useState(true);
  const [featuredGames, setFeaturedGames] = useState([]);
  const [topPick, setTopPick] = useState(null);

  useEffect(() => {
    loadDashboardData();
  }, []);

  const loadDashboardData = async () => {
    setIsLoading(true);
    try {
      // 1. Test Connection
      const healthResult = await ApiService.checkServerStatus();
      if (healthResult?.success) {
        setConnectionStatus('Connected ‚úÖ');
        setIsOnline(true);
      } else {
        throw new Error('Health check failed');
      }

      // 2. Load featured games (today's games)
      const gamesResult = await ApiService.getTodayGames();
      setFeaturedGames(gamesResult?.data?.slice(0, 2) || []); // Show first 2 games

      // 3. Load top fantasy pick
      const adviceResult = await ApiService.getFantasyAdvice();
      const mustStarts = adviceResult?.data?.must_starts || [];
      setTopPick(mustStarts.length > 0 ? mustStarts[0] : null);

    } catch (error) {
      console.error('Dashboard data load failed:', error);
      setConnectionStatus('Offline ‚ö†Ô∏è');
      setIsOnline(false);
      // Set fallback data
      setFeaturedGames([
        {
          id: 1,
          home_team: 'Lakers',
          away_team: 'Warriors',
          time: '7:30 PM',
          status: 'Upcoming',
        },
      ]);
      setTopPick({
        player: 'LeBron James',
        reason: 'Consistent high performer',
        projection: '52 fantasy points',
      });
    } finally {
      setIsLoading(false);
    }
  };

  const renderGameItem = ({ item, index }) => (
    <View key={`game-${item.id || index}`} style={styles.gameCard}>
      <View style={styles.gameTeamsRow}>
        <Text style={styles.teamText}>{item.home_team}</Text>
        <Text style={styles.vsText}>vs</Text>
        <Text style={styles.teamText}>{item.away_team}</Text>
      </View>
      <View style={styles.gameFooter}>
        <Text style={styles.gameTime}>
          <Ionicons name="time-outline" size={14} /> {item.time}
        </Text>
        <View style={[
          styles.statusPill,
          item.status === 'Live' && styles.livePill,
          item.status === 'Final' && styles.finalPill,
        ]}>
          <Text style={styles.statusText}>{item.status}</Text>
        </View>
      </View>
    </View>
  );

  const quickActions = [
    { title: 'Test Connection', screen: 'Test', icon: 'wifi', color: '#3b82f6' },
    { title: 'Diagnostics', screen: 'Diagnostics', icon: 'bug', color: '#8b5cf6' },
    { title: 'Promo Codes', screen: 'Promo', icon: 'gift', color: '#10b981' },
  ];

  const renderQuickAction = ({ item, index }) => (
    <TouchableOpacity
      key={`action-${index}`}
      style={[styles.actionButton, { backgroundColor: item.color }]}
      onPress={() => navigation.navigate(item.screen)}
    >
      <Ionicons name={item.icon} size={22} color="white" />
      <Text style={styles.actionText}>{item.title}</Text>
    </TouchableOpacity>
  );

  if (isLoading) {
    return (
      <View style={styles.centeredContainer}>
        <ActivityIndicator size="large" color="#1e3a8a" />
        <Text style={styles.loadingText}>Loading your dashboard...</Text>
      </View>
    );
  }

  return (
    <ScrollView style={styles.container} showsVerticalScrollIndicator={false}>
      {/* Header */}
      <View style={styles.header}>
        <Text style={styles.welcomeTitle}>Welcome back! üëã</Text>
        <Text style={styles.subtitle}>Your NBA Fantasy & Betting Assistant</Text>
      </View>

      {/* Connection Status Card */}
      <View style={styles.statusCard}>
        <View style={styles.statusHeader}>
          <Ionicons
            name={isOnline ? 'cloud' : 'cloud-offline'}
            size={24}
            color={isOnline ? '#10b981' : '#f59e0b'}
          />
          <View style={styles.statusTexts}>
            <Text style={styles.statusTitle}>
              Backend is {isOnline ? 'online' : 'offline'}
            </Text>
            <Text style={styles.statusMessage}>{connectionStatus}</Text>
          </View>
        </View>
        <TouchableOpacity
          onPress={loadDashboardData}
          style={styles.refreshButton}
          disabled={isLoading}
        >
          <Ionicons name="refresh" size={18} color="#3b82f6" />
          <Text style={styles.refreshText}>
            {isLoading ? 'Refreshing...' : 'Refresh Data'}
          </Text>
        </TouchableOpacity>
      </View>

      {/* Featured Games */}
      <View style={styles.section}>
        <View style={styles.sectionHeader}>
          <Text style={styles.sectionTitle}>
            <Ionicons name="basketball" size={20} /> Today's Featured Games
          </Text>
          <TouchableOpacity onPress={() => navigation.navigate('Live')}>
            <Text style={styles.viewAllText}>View All ‚Üí</Text>
          </TouchableOpacity>
        </View>
        {featuredGames.length > 0 ? (
          <FlatList
            data={featuredGames}
            renderItem={renderGameItem}
            keyExtractor={(item, index) => `featured-game-${item.id || index}`}
            scrollEnabled={false}
          />
        ) : (
          <Text style={styles.placeholderText}>No games scheduled for today.</Text>
        )}
      </View>

      {/* Top Fantasy Pick */}
      {topPick && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>
            <Ionicons name="trending-up" size={20} /> Top Fantasy Pick
          </Text>
          <View style={styles.pickCard}>
            <View style={styles.pickHeader}>
              <Text style={styles.pickPlayer}>‚≠ê {topPick.player}</Text>
              <TouchableOpacity onPress={() => navigation.navigate('Fantasy')}>
                <Text style={styles.moreAdviceText}>More Advice ‚Üí</Text>
              </TouchableOpacity>
            </View>
            <Text style={styles.pickReason}>{topPick.reason}</Text>
            <Text style={styles.pickProjection}>
              Projection: <Text style={styles.projectionHighlight}>{topPick.projection}</Text>
            </Text>
          </View>
        </View>
      )}

      {/* Quick Actions */}
      <View style={styles.section}>
        <Text style={styles.sectionTitle}>
          <Ionicons name="flash" size={20} /> Quick Actions
        </Text>
        <FlatList
          data={quickActions}
          renderItem={renderQuickAction}
          keyExtractor={(item, index) => `quick-action-${index}`}
          horizontal
          showsHorizontalScrollIndicator={false}
          contentContainerStyle={styles.actionsList}
        />
      </View>

      {/* Info Footer */}
      <View style={styles.infoFooter}>
        <Text style={styles.infoText}>
          Use the tabs below to explore all features: Fantasy, Betting, Stats, and more.
        </Text>
        <Text style={styles.infoHint}>
          üí° Your main navigation is at the bottom of the screen.
        </Text>
      </View>
    </ScrollView>
  );
}

