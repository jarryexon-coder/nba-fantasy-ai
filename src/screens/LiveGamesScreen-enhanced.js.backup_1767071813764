        homeRecord: '44-38',
        arena: 'FTX Arena',
        attendance: '19,600',
        keyPlayers: [
          { name: 'Jayson Tatum', points: 35, rebounds: 8, assists: 4 },
          { name: 'Jimmy Butler', points: 27, rebounds: 6, assists: 6 },
        ]
      },
    ],
    NFL: [
      {
        id: 1,
        awayTeam: 'Kansas City Chiefs',
        homeTeam: 'Buffalo Bills',
        awayScore: 24,
        homeScore: 27,
        period: '4th',
        timeRemaining: '5:42',
