        </View>
        <View style={styles.statCard}>
          <Text style={styles.statNumber}>
            {games.reduce((sum, game) => sum + (parseInt(getTeamScore(game.awayScore)) || 0) + (parseInt(getTeamScore(game.homeScore)) || 0), 0)}
          </Text>
          <Text style={styles.statLabel}>Total Points</Text>
        </View>
        <View style={styles.statCard}>
          <Text style={styles.statNumber}>{games.length}</Text>
          <Text style={styles.statLabel}>Total Games</Text>
        </View>
        <View style={styles.statCard}>
          <Text style={styles.statNumber}>3</Text>
          <Text style={styles.statLabel}>Overtimes</Text>
        </View>
      </View>
    </View>
  );

  const renderLiveUpdates = () => (
    <View style={styles.updatesContainer}>
      <View style={styles.updatesHeader}>
        <Text style={styles.updatesTitle}>Live Updates</Text>
        <TouchableOpacity onPress={onRefresh}>
          <Text style={styles.seeAll}>Refresh</Text>
        </TouchableOpacity>
      </View>
      
      <View style={styles.updateCard}>
        <View style={styles.updateHeader}>
          <View style={styles.updateSportBadge}>
            <Text style={styles.updateSportText}>{selectedSport}</Text>
          </View>
          <Text style={styles.updateTime}>Just now</Text>
        </View>
        <Text style={styles.updateText}>
          ‚ö° Stephen Curry hits a deep three-pointer! Warriors cut the lead to 2.
        </Text>
      </View>
      
      <View style={styles.updateCard}>
        <View style={styles.updateHeader}>
          <View style={styles.updateSportBadge}>
            <Text style={styles.updateSportText}>{selectedSport}</Text>
          </View>
          <Text style={styles.updateTime}>2 min ago</Text>
        </View>
        <Text style={styles.updateText}>
          üèà Josh Allen connects with Stefon Diggs for a 42-yard touchdown!
        </Text>
      </View>
    </View>
  );

  if (isLoading && !games.length) {
    return (
      <View style={styles.centered}>
        <ActivityIndicator size="large" color="#ef4444" />
        <Text style={styles.loadingText}>Loading Live Games...</Text>
      </View>
    );
  }

  const displayGames = games.length > 0 ? games : (mockGamesData[selectedSport] || []);

  return (
    <View style={styles.container}>
      {renderHeader()}
      
      <ScrollView
        refreshControl={
          <RefreshControl refreshing={refreshing} onRefresh={onRefresh} />
        }
      >
        {renderLiveStats()}
        
        <View style={styles.gamesSection}>
          <Text style={styles.sectionTitle}>
            {selectedSport} Games {displayGames.filter(g => g.status === 'Live').length > 0 && 'üî•'}
          </Text>
          
          {displayGames.length > 0 ? (
            displayGames.map((game, index) => renderGameCard(game, index))
          ) : (
            <View style={styles.noGamesCard}>
              <Ionicons name="sad" size={48} color="#9ca3af" />
              <Text style={styles.noGamesText}>No {selectedSport} games live right now</Text>
              <Text style={styles.noGamesSubtext}>Check back later for live action!</Text>
            </View>
          )}
        </View>

        {renderLiveUpdates()}
        
        <View style={styles.comingUpSection}>
          <Text style={styles.sectionTitle}>Coming Up Next</Text>
          <View style={styles.upcomingCard}>
            <View style={styles.upcomingTeams}>
              <Text style={styles.upcomingTeam}>Phoenix Suns</Text>
              <Text style={styles.upcomingVs}>@</Text>
              <Text style={styles.upcomingTeam}>Denver Nuggets</Text>
            </View>
            <View style={styles.upcomingInfo}>
              <Text style={styles.upcomingTime}>10:00 PM ET</Text>
              <Text style={styles.upcomingChannel}>ESPN</Text>
            </View>
            <TouchableOpacity style={styles.reminderButton}>
              <Ionicons name="notifications" size={14} color="#3b82f6" />
              <Text style={styles.reminderText}>Set Reminder</Text>
            </TouchableOpacity>
          </View>
        </View>
      </ScrollView>
    </View>
  );
};

