        return null;
    }
  };

  const transformHookData = (hookPlayers, sport) => {
    if (!hookPlayers || !Array.isArray(hookPlayers)) return null;
    
    return hookPlayers.slice(0, 20).map((player, index) => {
      const baseData = {
        id: player.id || index,
        name: player.name || `Player ${index + 1}`,
        team: player.team || 'Unknown Team',
        position: player.position || 'N/A',
        number: player.number || 0,
        age: player.age || 25,
        height: player.height || "6'0\"",
