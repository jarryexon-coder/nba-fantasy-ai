// Convenience methods for common endpoints - FIXED WITH CORRECT PATHS
apiService.getGames = () => apiService.get('/api/nba/games/today');
apiService.getTodayGames = () => apiService.get('/api/nba/games/today');
apiService.getPlayers = () => apiService.get('/api/nba/players');
apiService.getFantasyAdvice = () => apiService.get('/api/nba/fantasy/advice');
apiService.getBettingOdds = () => apiService.get('/api/nba/betting/odds');
apiService.getPromos = () => apiService.get('/api/promo/public');
apiService.getInfluencers = () => apiService.get('/api/influencer/directory/public');
apiService.getInfluencerAnalytics = (id) => apiService.get(`/api/influencer/${id}/analytics`);

// Server status check method
apiService.checkServerStatus = () => apiService.get('/health');

// Test connection method
apiService.testConnection = async () => {
  try {
    const response = await apiService.get('/health');
    return { success: true, data: response };
  } catch (error) {
    return { success: false, error: error.message };
  }
};

export default apiService;
