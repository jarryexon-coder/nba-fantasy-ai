  // Log screen load
  useEffect(() => {
    const logScreenView = async () => {
      await logAnalyticsEvent('player_stats_screen_view', {
        sport: selectedSport,
        platform: Platform.OS,
      });
    };
    logScreenView();
  }, []);

  // Helper functions for calculated metrics
  const calculateAdvancedMetrics = (player) => {
    if (!player || !player.stats) return {};
    
    const stats = player.stats;
    
    if (selectedSport === 'NBA') {
      // Player Efficiency Rating (PER) approximation
      const per = ((stats.points || 0) * 1.0 + 
                  (stats.rebounds || 0) * 0.8 + 
                  (stats.assists || 0) * 1.2 + 
                  (stats.steals || 0) * 1.5 + 
                  (stats.blocks || 0) * 2.0 - 
                  ((stats.turnovers || 2) * 0.5)) / (stats.games || 1) * 10;
      
      // True Shooting Percentage
      const fgAttempts = stats.fgAttempts || ((stats.points || 0) * 0.45);
      const tsPercentage = fgAttempts > 0 ? 
        ((stats.points || 0) / (2 * fgAttempts + 0.44 * (stats.ftAttempts || 0))) * 100 : 0;
      
      // Usage Rate approximation
      const usageRate = Math.min(((stats.points || 0) + (stats.assists || 0)) * 1.5 / (stats.games || 1), 40);
      
      // Win Shares approximation
      const winShares = ((stats.points || 0) * 0.3 + (stats.rebounds || 0) * 0.2 + 
                         (stats.assists || 0) * 0.25 + (stats.steals || 0) * 0.5 + 
                         (stats.blocks || 0) * 0.5) / 10;
      
      // Value Over Replacement Player (VORP) approximation
      const vorp = winShares * 2.5;
      
      // Efficiency Score
      const efficiency = ((stats.points || 0) + (stats.rebounds || 0) + (stats.assists || 0) + 
                          (stats.steals || 0) + (stats.blocks || 0)) / (stats.games || 1);
      
      return {
        per: per.toFixed(1),
        trueShooting: tsPercentage.toFixed(1),
        usageRate: usageRate.toFixed(1),
        winShares: winShares.toFixed(1),
        vorp: vorp.toFixed(1),
        efficiency: efficiency.toFixed(1),
      };
    }
    
    return {};
  };

  const calculateEfficiency = (stats) => {
    if (!stats) return 0;
    if (selectedSport === 'NBA') {
      // NBA Efficiency = (PTS + REB + AST + STL + BLK - TO) / GP
      return ((stats.points || 0) + (stats.rebounds || 0) + (stats.assists || 0) + 
              (stats.steals || 0) + (stats.blocks || 0)) / (stats.games || 1);
    }
    return 0;
  };

  const calculateValueScore = (player) => {
    let score = 0;
    if (player.stats) {
      // Base score from stats
      if (selectedSport === 'NBA') {
        score += (player.stats.points || 0) * 2;
        score += (player.stats.rebounds || 0) * 1.2;
        score += (player.stats.assists || 0) * 1.5;
        score += (player.stats.steals || 0) * 3;
        score += (player.stats.blocks || 0) * 3;
      }
      // Add fantasy points
      score += (player.fantasyPoints || 0) * 0.5;
    }
    // Add trend bonus
    if (player.trend === 'up') score += 10;
    else if (player.trend === 'down') score -= 5;
    
    return Math.round(score);
  };

  // Custom Progress Bar Component
  const CustomProgressBar = ({ progress, width, height = 8, color, unfilledColor = '#e5e7eb' }) => {
    return (
      <View style={[styles.customProgressBarContainer, { width, height }]}>
        <View style={[styles.customProgressBarUnfilled, { backgroundColor: unfilledColor, width, height }]}>
          <View style={[styles.customProgressBarFilled, { backgroundColor: color, width: Math.max(width * progress, 0), height }]} />
        </View>
      </View>
    );
  };

  // Transform sports data from hook when it changes
  useEffect(() => {
    if (nba || nfl || nhl || mlb) {
      const sportData = getSportDataFromHook();
      if (sportData && sportData.length > 0) {
        // Use hook data when available
        setPlayers(sportData);
        setFilteredPlayers(sportData);
        
        // Calculate stats summary from hook data
        calculateStatsSummary(sportData);
      } else {
        // Fall back to sample data
        const sampleData = samplePlayers[selectedSport] || [];
        setPlayers(sampleData);
        setFilteredPlayers(sampleData);
        calculateStatsSummary(sampleData);
      }
      setLoading(false);
      setRefreshing(false);
    }
  }, [nba, nfl, nhl, mlb, selectedSport]);

  const sports = ['NBA', 'NFL', 'NHL', 'MLB'];

  const samplePlayers = {
