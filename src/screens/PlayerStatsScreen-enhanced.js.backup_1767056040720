      const filtered = players.filter(player =>
        player.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
        player.team.toLowerCase().includes(searchQuery.toLowerCase()) ||
        player.position.toLowerCase().includes(searchQuery.toLowerCase())
      );
      setFilteredPlayers(filtered);
    }
  }, [searchQuery, players]);

  const onRefresh = async () => {
    setRefreshing(true);
    // Use both refresh methods
    await refreshAllData();
    await loadData();
    
    // Log refresh analytics
    await logAnalyticsEvent('player_stats_refresh', {
      sport: selectedSport,
      num_players: filteredPlayers.length,
    });
    
    setRefreshing(false);
  };

  const handleSportChange = async (sport) => {
    setSelectedSport(sport);
    setSearchQuery('');
    setSelectedPlayer(null);
    
    // Log sport change analytics
    await logAnalyticsEvent('player_stats_sport_change', {
      from_sport: selectedSport,
      to_sport: sport,
    });
  };

  const handlePlayerSelect = async (player) => {
