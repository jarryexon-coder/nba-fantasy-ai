            </View>
          </View>
          
          <View style={styles.featuredPlayerBody}>
            <View style={styles.featuredPlayerInfo}>
              <Text style={styles.featuredPlayerName}>{topPlayer?.name || 'N/A'}</Text>
              <Text style={styles.featuredPlayerDetails}>
                {teamName || ''} ‚Ä¢ {String(topPlayer?.position || '')}
              </Text>
              <View style={styles.featuredPlayerStats}>
                <View style={styles.featuredStatItem}>
                  <Text style={styles.featuredStatValue}>{topPlayer?.points || 'N/A'}</Text>
