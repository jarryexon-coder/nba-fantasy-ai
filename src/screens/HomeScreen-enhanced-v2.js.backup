  // UPDATED: Enhanced game card renderer with safer object handling from File 1
  const renderEnhancedGameCard = (game, index, isLiveGame = false) => {
    const isLive = isLiveGame || game?.status === 'live';
    const isFinal = game?.status === 'final';
    
    // SAFER helper functions with better object handling
    const getTeamName = (team) => {
      if (!team) return 'TBD';
      if (typeof team === 'string') return team;
      if (typeof team === 'object' && team.name) return String(team.name);
      return 'TBD';
    };

    const getTeamScore = (team) => {
      if (!team) return '0';
      if (typeof team === 'object' && team.score !== undefined) return String(team.score);
      if (typeof team === 'number') return String(team);
      return '0';
    };

    const getTeamRecord = (team) => {
      if (!team || typeof team !== 'object') return '';
      return String(team.record || '');
    };

    // ADDED: Safely extract team data before using in JSX
    const awayTeamName = getTeamName(game?.awayTeam);
    const homeTeamName = getTeamName(game?.homeTeam);
    const awayTeamScore = getTeamScore(game?.awayTeam);
    const homeTeamScore = getTeamScore(game?.homeTeam);
    const awayTeamRecord = getTeamRecord(game?.awayTeam);
    const homeTeamRecord = getTeamRecord(game?.homeTeam);

    return (
      <TouchableOpacity 
        key={game?.gameId || game?.id || index}
        onPress={() => navigation.navigate('GameDetails', { 
          gameId: game?.id || game?.gameId,
          gameData: game 
        })}
