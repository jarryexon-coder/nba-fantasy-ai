        salary: '$45.0M',
        contract: '10 years',
        highlights: ['Super Bowl MVP', 'Passing yards leader'],
      },
    ],
  };

  const getSportDataFromHook = () => {
    switch (selectedSport) {
      case 'NBA':
        return transformHookData(nba?.players, 'NBA');
      case 'NFL':
        return transformHookData(nfl?.players, 'NFL');
      case 'NHL':
        return transformHookData(nhl?.players, 'NHL');
      case 'MLB':
        return transformHookData(mlb?.players, 'MLB');
      default:
        return null;
    }
  };

  const transformHookData = (hookPlayers, sport) => {
    if (!hookPlayers || !Array.isArray(hookPlayers)) return null;
    
    return hookPlayers.slice(0, 20).map((player, index) => {
      const baseData = {
        id: player.id || index,
        name: player.name || `Player ${index + 1}`,
        team: player.team || 'Unknown Team',
        position: player.position || 'N/A',
        number: player.number || 0,
        age: player.age || 25,
        height: player.height || "6'0\"",
        weight: player.weight || '200 lbs',
        trend: getRandomTrend(),
        fantasyPoints: player.fantasyPoints || Math.floor(Math.random() * 30) + 20,
        salary: player.salary || `$${Math.floor(Math.random() * 30) + 20}M`,
        contract: player.contract || `${Math.floor(Math.random() * 5) + 1} years`,
        highlights: player.highlights || ['Consistent performer', 'Key team player'],
      };

      // Add sport-specific stats
      if (sport === 'NBA') {
        return {
          ...baseData,
          stats: {
            games: player.games || 50,
            points: player.points || (Math.random() * 30).toFixed(1),
            rebounds: player.rebounds || (Math.random() * 12).toFixed(1),
            assists: player.assists || (Math.random() * 10).toFixed(1),
            steals: player.steals || (Math.random() * 2).toFixed(1),
            blocks: player.blocks || (Math.random() * 1.5).toFixed(1),
            turnovers: player.turnovers || (Math.random() * 4).toFixed(1),
            fgPercentage: player.fgPercentage || (Math.random() * 30 + 40).toFixed(1),
            threePercentage: player.threePercentage || (Math.random() * 30 + 30).toFixed(1),
            ftPercentage: player.ftPercentage || (Math.random() * 30 + 60).toFixed(1),
            minutes: player.minutes || (Math.random() * 15 + 20).toFixed(1),
            plusMinus: player.plusMinus || (Math.random() * 10 - 2).toFixed(1),
          }
        };
      } else if (sport === 'NFL') {
        return {
          ...baseData,
          stats: {
            games: player.games || 16,
            yards: player.yards || Math.floor(Math.random() * 5000),
            touchdowns: player.touchdowns || Math.floor(Math.random() * 40),
            interceptions: player.interceptions || Math.floor(Math.random() * 15),
            rating: player.rating || (Math.random() * 50 + 70).toFixed(1),
            completion: player.completion || (Math.random() * 30 + 60).toFixed(1),
            sacks: player.sacks || Math.floor(Math.random() * 30),
            rushingYards: player.rushingYards || Math.floor(Math.random() * 500),
            rushingTDs: player.rushingTDs || Math.floor(Math.random() * 5),
          }
        };
      }
      
      // Default stats for other sports
      return {
        ...baseData,
        stats: player.stats || { games: 50, points: 15.0 }
      };
    });
  };

  const getRandomTrend = () => {
    const trends = ['up', 'down', 'stable'];
    return trends[Math.floor(Math.random() * trends.length)];
  };

  const calculateStatsSummary = (playersData) => {
    if (playersData.length > 0) {
      const avgPoints = (playersData.reduce((sum, p) => sum + (p.stats.points || 0), 0) / playersData.length).toFixed(1);
      const avgRebounds = (playersData.reduce((sum, p) => sum + (p.stats.rebounds || 0), 0) / playersData.length).toFixed(1);
      const avgAssists = (playersData.reduce((sum, p) => sum + (p.stats.assists || 0), 0) / playersData.length).toFixed(1);
      const topScorer = playersData.reduce((top, p) => p.stats.points > top.stats.points ? p : top, playersData[0]);
      
      // Calculate average advanced score
      let totalAdvancedScore = 0;
      playersData.forEach(player => {
        const advanced = calculateAdvancedMetrics(player);
        totalAdvancedScore += parseFloat(advanced.efficiency || 0);
      });
      const avgAdvancedScore = (totalAdvancedScore / playersData.length).toFixed(1);
      
      setStatsSummary({
        avgPoints,
        avgRebounds,
        avgAssists,
        topScorer: topScorer.name,
        avgAdvancedScore,
      });
    }
  };

  // Handle search functionality
  const handlePlayerSearch = (query) => {
    setSearchQuery(query);
    addToSearchHistory(query);
    
    logAnalyticsEvent('player_stats_search', {
      query: query,
      sport: selectedSport,
      result_count: filteredPlayers.length,
    });
  };

  useEffect(() => {
    // Filter players based on search query
    if (searchQuery.trim() === '') {
      setFilteredPlayers(players);
    } else {
      const filtered = players.filter(player =>
        (player.name || '').toLowerCase().includes(searchQuery.toLowerCase()) ||
        (player.team || '').toLowerCase().includes(searchQuery.toLowerCase()) ||
        (player.position || '').toLowerCase().includes(searchQuery.toLowerCase())
      );
      setFilteredPlayers(filtered);
    }
  }, [searchQuery, players]);

  const loadData = async () => {
    try {
      console.log('ðŸ“Š Loading enhanced Player Stats...');
      
      // Log analytics event for data load
      await logAnalyticsEvent('player_stats_data_load', {
        sport: selectedSport,
        has_nba_data: !!nba?.players,
        has_nfl_data: !!nfl?.players,
        has_nhl_data: !!nhl?.players,
        has_mlb_data: !!mlb?.players,
      });
      
      // Try to load from hook first
      const sportData = getSportDataFromHook();
      if (sportData && sportData.length > 0) {
        setPlayers(sportData);
        setFilteredPlayers(sportData);
        calculateStatsSummary(sportData);
      } else {
        // Fall back to sample data
        let playersData = samplePlayers[selectedSport] || [];
        setPlayers(playersData);
        setFilteredPlayers(playersData);
        calculateStatsSummary(playersData);
      }
      
    } catch (error) {
      console.log('Error loading player stats:', error.message);
      // Use sample data as fallback
      let playersData = samplePlayers[selectedSport] || [];
      setPlayers(playersData);
      setFilteredPlayers(playersData);
      calculateStatsSummary(playersData);
    } finally {
      setLoading(false);
      setRefreshing(false);
    }
  };

  const onRefresh = async () => {
    setRefreshing(true);
    // Use both refresh methods
    await refreshAllData();
    await loadData();
    
    // Log refresh analytics
    await logAnalyticsEvent('player_stats_refresh', {
      sport: selectedSport,
      num_players: filteredPlayers.length,
    });
    
    setRefreshing(false);
  };

  const handleSportChange = async (sport) => {
    setSelectedSport(sport);
    setSearchQuery('');
    setSelectedPlayer(null);
    
    // Log sport change analytics
    await logAnalyticsEvent('player_stats_sport_change', {
      from_sport: selectedSport,
      to_sport: sport,
    });
  };

  const handlePlayerSelect = async (player) => {
    setSelectedPlayer(player);
    
    // Calculate advanced metrics for selected player
    const metrics = calculateAdvancedMetrics(player);
    setAdvancedMetrics(metrics);
    
    // Log player selection analytics
    await logAnalyticsEvent('player_stats_player_select', {
      player_name: player.name,
      player_team: player.team,
      sport: selectedSport,
      player_position: player.position,
    });
  };

  // UPDATED: This function is not needed anymore since we're using the navigation helper
  // const handlePlayerProfileNavigation = async (player) => {
  //   ... removed code ...
  // };

  const renderHeader = () => (
    <LinearGradient
      colors={['#7c3aed', '#8b5cf6']}
      style={styles.header}
    >
      <View style={styles.headerTop}>
        <TouchableOpacity 
          style={styles.backButton}
          onPress={() => navigation.goBack()}
        >
          <Ionicons name="arrow-back" size={24} color="white" />
        </TouchableOpacity>
        
        <View style={styles.headerContent}>
          <Text style={styles.title}>Player Analytics Pro</Text>
          <Text style={styles.subtitle}>Advanced stats & performance metrics</Text>
        </View>
        
        <View style={{ width: 24 }} /> {/* Spacer for alignment */}
      </View>
      
      <View style={styles.sportsFilter}>
        {sports.map((sport) => (
          <TouchableOpacity
            key={sport}
            style={[
              styles.sportButton,
              selectedSport === sport && styles.activeSportButton
            ]}
            onPress={() => handleSportChange(sport)}
          >
            <Text style={[
              styles.sportText,
              selectedSport === sport && styles.activeSportText
            ]}>
              {sport}
            </Text>
          </TouchableOpacity>
        ))}
      </View>
      
      {/* NEW: Add navigation menu */}
      <View style={styles.navigationMenuContainer}>
        {renderNavigationMenu()}
      </View>
    </LinearGradient>
  );

  const renderSearchBar = () => (
    <View style={styles.searchSection}>
      <SearchBar
        placeholder={`Search ${selectedSport} players...`}
        onSearch={handlePlayerSearch}
        searchHistory={searchHistory}
        style={styles.playerSearchBar}
      />
      
      {searchQuery.trim() && (
        <View style={styles.searchResultsInfo}>
          <Text style={styles.searchResultsText}>
            {filteredPlayers.length} of {players.length} players match "{searchQuery}"
          </Text>
          <TouchableOpacity 
            onPress={() => {
              setSearchQuery('');
              handlePlayerSearch('');
            }}
            activeOpacity={0.7}
          >
            <Text style={styles.clearSearchText}>Clear</Text>
          </TouchableOpacity>
        </View>
      )}
    </View>
  );

  const renderStatsSummary = () => (
    <View style={styles.statsSummary}>
      <Text style={styles.summaryTitle}>League Averages ({selectedSport})</Text>
      <View style={styles.summaryGrid}>
        <View style={styles.summaryCard}>
          <Text style={styles.summaryValue}>{statsSummary.avgPoints}</Text>
          <Text style={styles.summaryLabel}>Points</Text>
        </View>
        <View style={styles.summaryCard}>
          <Text style={styles.summaryValue}>{statsSummary.avgRebounds}</Text>
          <Text style={styles.summaryLabel}>Rebounds</Text>
        </View>
        <View style={styles.summaryCard}>
          <Text style={styles.summaryValue}>{statsSummary.avgAssists}</Text>
          <Text style={styles.summaryLabel}>Assists</Text>
        </View>
        <View style={styles.summaryCard}>
          <Text style={styles.summaryValue}>{statsSummary.avgAdvancedScore}</Text>
          <Text style={styles.summaryLabel}>Eff. Score</Text>
        </View>
      </View>
    </View>
  );

  const renderPrompts = () => (
    <View style={styles.promptsContainer}>
      <View style={styles.promptsHeader}>
        <Text style={styles.promptsTitle}>Search Tips</Text>
        <TouchableOpacity onPress={() => setShowPrompts(!showPrompts)}>
          <Ionicons 
            name={showPrompts ? "chevron-up" : "chevron-down"} 
            size={20} 
            color="#6b7280" 
          />
        </TouchableOpacity>
      </View>
      
      {showPrompts && (
        <>
          <View style={styles.promptCard}>
            <Ionicons name="search" size={20} color="#8b5cf6" style={styles.promptIcon} />
            <View style={styles.promptContent}>
              <Text style={styles.promptTitle}>Try These Search Examples:</Text>
              <Text style={styles.promptText}>â€¢ "LeBron" or "Curry" for specific players</Text>
              <Text style={styles.promptText}>â€¢ "Lakers" or "Warriors" for team players</Text>
              <Text style={styles.promptText}>â€¢ "point guard" or "center" for positions</Text>
              <Text style={styles.promptText}>â€¢ "PPG > 25" for top scorers</Text>
              <Text style={styles.promptText}>â€¢ "APG > 8" for top assist leaders</Text>
            </View>
          </View>
          
          <View style={styles.refreshPrompt}>
            <Ionicons name="stats-chart" size={20} color="#10b981" />
            <Text style={styles.refreshText}>
              View advanced metrics by selecting any player. Pull down to refresh data.
            </Text>
          </View>
          
          {/* NEW: Quick actions row */}
          <View style={styles.quickActionsRow}>
            <TouchableOpacity 
              style={styles.quickActionSmall}
              onPress={() => handleNavigateToAnalytics()}
            >
              <Ionicons name="analytics" size={20} color="#8b5cf6" />
              <Text style={styles.quickActionSmallText}>Team Analytics</Text>
            </TouchableOpacity>
            <TouchableOpacity 
              style={styles.quickActionSmall}
              onPress={() => handleNavigateToPredictions()}
            >
              <Ionicons name="trending-up" size={20} color="#8b5cf6" />
              <Text style={styles.quickActionSmallText}>AI Predict</Text>
            </TouchableOpacity>
          </View>
        </>
      )}
    </View>
  );

  const renderAdvancedMetrics = () => {
    if (!selectedPlayer || selectedSport !== 'NBA') return null;
    
    return (
      <View style={styles.advancedMetricsContainer}>
        <Text style={styles.detailSectionTitle}>Advanced Metrics</Text>
        <View style={styles.advancedMetricsGrid}>
          <View style={styles.advancedMetricCard}>
            <Ionicons name="speedometer" size={20} color="#7c3aed" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.per}</Text>
            <Text style={styles.advancedMetricLabel}>PER</Text>
            <Text style={styles.advancedMetricDesc}>Player Efficiency</Text>
          </View>
          
          <View style={styles.advancedMetricCard}>
            <Ionicons name="trending-up" size={20} color="#10b981" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.trueShooting}%</Text>
            <Text style={styles.advancedMetricLabel}>TS%</Text>
            <Text style={styles.advancedMetricDesc}>True Shooting</Text>
          </View>
          
          <View style={styles.advancedMetricCard}>
            <Ionicons name="bar-chart" size={20} color="#f59e0b" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.usageRate}%</Text>
            <Text style={styles.advancedMetricLabel}>USG%</Text>
            <Text style={styles.advancedMetricDesc}>Usage Rate</Text>
          </View>
          
          <View style={styles.advancedMetricCard}>
            <Ionicons name="trophy" size={20} color="#3b82f6" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.winShares}</Text>
            <Text style={styles.advancedMetricLabel}>WS</Text>
            <Text style={styles.advancedMetricDesc}>Win Shares</Text>
          </View>
          
          <View style={styles.advancedMetricCard}>
            <Ionicons name="star" size={20} color="#ef4444" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.vorp}</Text>
            <Text style={styles.advancedMetricLabel}>VORP</Text>
            <Text style={styles.advancedMetricDesc}>Value Added</Text>
          </View>
          
          <View style={styles.advancedMetricCard}>
            <Ionicons name="pulse" size={20} color="#8b5cf6" />
            <Text style={styles.advancedMetricValue}>{advancedMetrics.efficiency}</Text>
            <Text style={styles.advancedMetricLabel}>EFF</Text>
            <Text style={styles.advancedMetricDesc}>Efficiency</Text>
          </View>
        </View>
        
        <View style={styles.advancedLegend}>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#7c3aed' }]} />
            <Text style={styles.legendText}>PER: Player Efficiency Rating</Text>
          </View>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#10b981' }]} />
            <Text style={styles.legendText}>TS%: True Shooting Percentage</Text>
          </View>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#3b82f6' }]} />
            <Text style={styles.legendText}>WS: Win Shares (contribution to wins)</Text>
          </View>
        </View>
      </View>
    );
  };

  const renderPlayerCard = (player) => (
    <View key={player.id} style={styles.playerCardShadow}>
      <TouchableOpacity
        style={[
          styles.playerCard,
          selectedPlayer?.id === player.id && styles.selectedPlayerCard
        ]}
        onPress={() => handlePlayerSelect(player)}
      >
        <View style={styles.playerHeader}>
          <View style={styles.playerInfo}>
            <Text style={styles.playerName}>{player.name}</Text>
            <View style={styles.playerMeta}>
              <Text style={styles.playerTeam}>{player.team}</Text>
              <Text style={styles.playerSeparator}>â€¢</Text>
              <Text style={styles.playerPosition}>{player.position} #{player.number}</Text>
            </View>
          </View>
          <View style={styles.playerTrend}>
            <Ionicons 
              name={player.trend === 'up' ? 'trending-up' : player.trend === 'down' ? 'trending-down' : 'remove'} 
              size={16} 
              color={player.trend === 'up' ? '#10b981' : player.trend === 'down' ? '#ef4444' : '#6b7280'} 
            />
            <Text style={styles.trendLabel}>
              {player.trend === 'up' ? '+2.3' : player.trend === 'down' ? '-1.5' : '0.0'}
            </Text>
          </View>
        </View>
        
        <View style={styles.playerStatsRow}>
          {selectedSport === 'NBA' ? (
            <>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>PTS</Text>
                <Text style={styles.statValue}>{player.stats.points}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>REB</Text>
                <Text style={styles.statValue}>{player.stats.rebounds}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>AST</Text>
                <Text style={styles.statValue}>{player.stats.assists}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>EF%</Text>
                <Text style={styles.statValue}>
                  {calculateAdvancedMetrics(player).efficiency || '0.0'}
                </Text>
              </View>
            </>
          ) : selectedSport === 'NFL' ? (
            <>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>YDS</Text>
                <Text style={styles.statValue}>{player.stats.yards}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>TD</Text>
                <Text style={styles.statValue}>{player.stats.touchdowns}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>INT</Text>
                <Text style={styles.statValue}>{player.stats.interceptions}</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>RTG</Text>
                <Text style={styles.statValue}>{player.stats.rating}</Text>
              </View>
            </>
          ) : null}
        </View>
        
        <View style={styles.playerFooter}>
          <View style={styles.footerLeft}>
            <Text style={styles.playerSalary}>{player.salary}</Text>
            <Text style={styles.playerContract}>{player.contract}</Text>
          </View>
          
          <View style={styles.playerActions}>
            <TouchableOpacity 
              style={[styles.actionButton, styles.statsButton]}
              onPress={() => handlePlayerSelect(player)}
            >
              <Ionicons name="stats-chart" size={14} color="#3b82f6" />
              <Text style={styles.actionButtonText}>Stats</Text>
            </TouchableOpacity>
            
            {/* UPDATED: Removed Profile button since we're on PlayerStats screen already */}
            <TouchableOpacity 
              style={[styles.actionButton, styles.fantasyButton]}
              onPress={() => handleNavigateToFantasy()}
            >
              <Ionicons name="trophy" size={14} color="#10b981" />
              <Text style={styles.actionButtonText}>Fantasy</Text>
            </TouchableOpacity>
          </View>
        </View>
      </TouchableOpacity>
    </View>
  );

  const renderPlayerDetail = () => {
    if (!selectedPlayer) return null;
    
    return (
      <View style={styles.detailContainer}>
        <View style={styles.detailHeader}>
          <Text style={styles.detailTitle}>{selectedPlayer.name}</Text>
          <TouchableOpacity onPress={() => setSelectedPlayer(null)}>
            <Ionicons name="close" size={24} color="#6b7280" />
          </TouchableOpacity>
        </View>
        
        <View style={styles.detailInfo}>
          <View style={styles.infoRow}>
            <Text style={styles.infoLabel}>Team:</Text>
            <Text style={styles.infoValue}>{selectedPlayer.team}</Text>
          </View>
          <View style={styles.infoRow}>
            <Text style={styles.infoLabel}>Position:</Text>
            <Text style={styles.infoValue}>{selectedPlayer.position} #{selectedPlayer.number}</Text>
          </View>
          <View style={styles.infoRow}>
            <Text style={styles.infoLabel}>Age:</Text>
            <Text style={styles.infoValue}>{selectedPlayer.age} â€¢ {selectedPlayer.height} â€¢ {selectedPlayer.weight}</Text>
          </View>
          <View style={styles.infoRow}>
            <Text style={styles.infoLabel}>Contract:</Text>
            <Text style={styles.infoValue}>{selectedPlayer.contract} â€¢ {selectedPlayer.salary}/yr</Text>
          </View>
        </View>
        
        <Text style={styles.detailSectionTitle}>Season Stats</Text>
        <View style={styles.statsGrid}>
          {Object.entries(selectedPlayer.stats).map(([key, value]) => (
            <View key={key} style={styles.detailStat}>
              <Text style={styles.detailStatLabel}>
                {key.charAt(0).toUpperCase() + key.slice(1).replace('Percentage', '%').replace('three', '3pt')}
              </Text>
              <Text style={styles.detailStatValue}>{value}</Text>
            </View>
          ))}
        </View>
        
        {selectedSport === 'NBA' && renderAdvancedMetrics()}
        
        <Text style={styles.detailSectionTitle}>Performance Metrics</Text>
        <View style={styles.metricsContainer}>
          <View style={styles.metric}>
            <Text style={styles.metricLabel}>Fantasy Value</Text>
            <CustomProgressBar 
              progress={selectedPlayer.fantasyPoints / 60}
              width={width - 60}
              height={8}
              color="#8b5cf6"
              unfilledColor="#e5e7eb"
            />
            <Text style={styles.metricValue}>{selectedPlayer.fantasyPoints}/60</Text>
          </View>
          
          <View style={styles.metric}>
            <Text style={styles.metricLabel}>Consistency</Text>
            <CustomProgressBar 
              progress={0.82}
              width={width - 60}
              height={8}
              color="#10b981"
              unfilledColor="#e5e7eb"
            />
            <Text style={styles.metricValue}>82%</Text>
          </View>
        </View>
        
        <Text style={styles.detailSectionTitle}>Recent Highlights</Text>
        <View style={styles.highlights}>
          {selectedPlayer.highlights?.map((highlight, index) => (
            <View key={index} style={styles.highlightItem}>
              <Ionicons name="checkmark-circle" size={16} color="#10b981" />
              <Text style={styles.highlightText}>{highlight}</Text>
            </View>
          ))}
        </View>

        {/* NEW: Quick action buttons */}
        <View style={styles.quickActionsRow}>
          <TouchableOpacity 
            style={styles.quickActionButton}
            onPress={() => handleNavigateToAnalytics()}
          >
            <Ionicons name="analytics" size={16} color="#8b5cf6" />
            <Text style={styles.quickActionText}>View Team Analytics</Text>
          </TouchableOpacity>
          
          <TouchableOpacity 
            style={styles.quickActionButton}
            onPress={() => handleNavigateToFantasy()}
          >
            <Ionicons name="trophy" size={16} color="#8b5cf6" />
            <Text style={styles.quickActionText}>Fantasy Tools</Text>
          </TouchableOpacity>
        </View>
      </View>
    );
  };

  if (loading || isSportsDataLoading) {
    return (
      <View style={styles.centered}>
        <ActivityIndicator size="large" color="#8b5cf6" />
        <Text style={styles.loadingText}>Loading Player Analytics...</Text>
      </View>
    );
  }

  return (
    <ErrorBoundary 
      fallback={
        <View style={styles.errorContainer}>
          <Text>Player stats data unavailable</Text>
        </View>
      }
    >
      <View style={styles.container}>
        {renderHeader()}
        
        <ScrollView
          refreshControl={
            <RefreshControl refreshing={refreshing} onRefresh={onRefresh} />
          }
          contentContainerStyle={styles.scrollContent}
          style={styles.scrollView}
        >
          {renderSearchBar()}
          {renderPrompts()}
          {renderStatsSummary()}
          
          <View style={styles.section}>
            <View style={styles.sectionHeader}>
              <Text style={styles.sectionTitle}>
                {selectedSport} Players ({filteredPlayers.length})
              </Text>
              <View style={styles.sortOptions}>
                <TouchableOpacity style={styles.sortButton}>
                  <Ionicons name="funnel" size={16} color="#6b7280" />
                  <Text style={styles.sortText}>Filter</Text>
                </TouchableOpacity>
                <TouchableOpacity style={styles.sortButton}>
                  <Ionicons name="swap-vertical" size={16} color="#6b7280" />
                  <Text style={styles.sortText}>Sort</Text>
                </TouchableOpacity>
              </View>
            </View>
            
            {filteredPlayers.length > 0 ? (
              filteredPlayers.map(player => renderPlayerCard(player))
            ) : (
              <View style={styles.emptyStateContainer}>
                <View style={styles.emptyStateContent}>
                  <Ionicons name="search" size={48} color="#d1d5db" />
                  <Text style={styles.emptyText}>
                    {searchQuery ? 'No players found' : 'No players available'}
                  </Text>
                  <Text style={styles.emptySubtext}>
                    {searchQuery ? 'Try a different search term or sport' : 'Check back later for player data'}
                  </Text>
                </View>
              </View>
            )}
          </View>

          {renderPlayerDetail()}
          
          <View style={styles.footer}>
            <Text style={styles.footerText}>
              Stats update manually. Pull down to refresh. Advanced metrics available for NBA players.
            </Text>
            <TouchableOpacity 
              style={styles.refreshButton}
              onPress={onRefresh}
            >
              <Ionicons name="refresh" size={16} color="#8b5cf6" />
              <Text style={styles.refreshButtonText}>Refresh Data</Text>
            </TouchableOpacity>
          </View>
        </ScrollView>
      </View>
    </ErrorBoundary>
  );
};

