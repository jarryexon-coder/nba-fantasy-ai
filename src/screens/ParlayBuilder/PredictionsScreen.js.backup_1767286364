                <Text style={styles.statLabel}>Last 5 Avg:</Text>
              </View>
              <Text style={styles.lastAvg}>{item.last5Avg}</Text>
            </View>
          </View>
          
          {/* Odds and Edge */}
          <View style={styles.oddsSection}>
            <View style={styles.oddsCard}>
