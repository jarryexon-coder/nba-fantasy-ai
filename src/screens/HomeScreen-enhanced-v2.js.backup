        <Text style={styles.quickActionText}>Fantasy</Text>
      </TouchableOpacity>
      
      <TouchableOpacity style={styles.quickActionButton}>
        <View style={[styles.quickActionIcon, { backgroundColor: '#f59e0b20' }]}>
          <Ionicons name="sparkles" size={24} color="#f59e0b" />
