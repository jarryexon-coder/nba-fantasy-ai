            <View key={`player-${playerIndex}-${player.name}`} style={styles.playerStats}>
              <Text style={styles.playerName}>{player.name}</Text>
              <View style={styles.statsRow}>
                {player.points !== undefined && (
                  <View style={styles.stat}>
                    <Text style={styles.statValue}>{player.points}</Text>
                    <Text style={styles.statLabel}>PTS</Text>
                  </View>
                )}
                {player.rebounds !== undefined && (
                  <View style={styles.stat}>
                    <Text style={styles.statValue}>{player.rebounds}</Text>
                    <Text style={styles.statLabel}>REB</Text>
                  </View>
                )}
                {player.assists !== undefined && (
                  <View style={styles.stat}>
                    <Text style={styles.statValue}>{player.assists}</Text>
                    <Text style={styles.statLabel}>AST</Text>
                  </View>
                )}
                {player.goals !== undefined && (
                  <View style={styles.stat}>
                    <Text style={styles.statValue}>{player.goals}</Text>
                    <Text style={styles.statLabel}>G</Text>
                  </View>
                )}
                {player.yards !== undefined && (
                  <View style={styles.stat}>
                    <Text style={styles.statValue}>{player.yards}</Text>
                    <Text style={styles.statLabel}>YDS</Text>
                  </View>
                )}
              </View>
            </View>
          ))}
        </View>
      </View>
      
