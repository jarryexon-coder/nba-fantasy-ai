// src/screens/LiveGamesScreen-enhanced.js - FIXED VERSION
import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  ActivityIndicator,
  RefreshControl,
  TouchableOpacity,
  Animated,
  Dimensions,
} from 'react-native';
import LinearGradient from 'react-native-linear-gradient';
import { Ionicons } from '@expo/vector-icons';
import { useSportsData } from "../hooks/useSportsData";

const { width } = Dimensions.get('window');

// Helper functions for safe data extraction
const getTeamName = (team) => {
  if (!team) return 'TBD';
  if (typeof team === 'string') return team;
  if (typeof team === 'object' && team.name) return String(team.name);
  return 'TBD';
};

const getTeamScore = (team) => {
  if (!team) return '0';
  if (typeof team === 'object' && team.score !== undefined) return String(team.score);
  if (typeof team === 'number') return String(team);
  return '0';
};

// Helper function for safe array slicing
const safeSlice = (array, start, end) => {
  if (!Array.isArray(array)) return [];
  return array.slice(start, end);
};

const LiveGamesScreen = () => {
  const [selectedSport, setSelectedSport] = useState('NBA');
  const [refreshing, setRefreshing] = useState(false);
  const [pulseAnim] = useState(new Animated.Value(1));
  
  const sports = ['NBA', 'NFL', 'NHL', 'MLB'];

  // Use sports data hook
  const { 
    data: { nba, nfl, nhl, mlb, news },
    isLoading,
    refreshAllData
  } = useSportsData({
    autoRefresh: true,
    refreshInterval: 30000
  });

  // Get games based on selected sport
  const getGamesForSport = () => {
    switch(selectedSport) {
      case 'NBA':
        return nba?.liveGames || nba?.games || [];
      case 'NFL':
        return nfl?.liveGames || nfl?.games || [];
      case 'NHL':
        return nhl?.liveGames || nhl?.games || [];
      case 'MLB':
        return mlb?.liveGames || mlb?.games || [];
      default:
        return [];
    }
  };

  const games = getGamesForSport();

  // Mock data structure for fallback (when API doesn't return proper structure)
  const mockGamesData = {
    NBA: [
      {
        id: 1,
        awayTeam: 'Golden State Warriors',
        homeTeam: 'Los Angeles Lakers',
        awayScore: 105,
        homeScore: 108,
        period: '4th',
        timeRemaining: '2:15',
        status: 'Live',
        quarter: '4th',
