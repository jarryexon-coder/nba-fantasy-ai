// Analytics helper function (same pattern as ParlayBuilderScreen)
const logAnalyticsEvent = async (eventName, eventParams = {}) => {
  try {
    // Only use Firebase analytics on web
    if (Platform.OS === 'web') {
      const { analytics } = require('../firebase/firebase-config');
      const { logEvent } = require('firebase/analytics');
      
      if (analytics) {
        await logEvent(analytics, eventName, {
          ...eventParams,
          timestamp: new Date().toISOString(),
        });
      }
    } else {
      // On native, just log to console and AsyncStorage
      console.log(`ðŸ“Š [Native] Analytics Event: ${eventName}`, eventParams);
    }
    
    // Always log to AsyncStorage for debugging
    try {
      const existingEvents = JSON.parse(await AsyncStorage.getItem('analytics_events') || '[]');
      existingEvents.push({
        event: eventName,
        params: eventParams,
        timestamp: new Date().toISOString()
      });
      if (existingEvents.length > 100) {
        existingEvents.splice(0, existingEvents.length - 100);
      }
      await AsyncStorage.setItem('analytics_events', JSON.stringify(existingEvents));
    } catch (storageError) {
      console.warn('Could not save analytics event locally:', storageError);
    }
  } catch (error) {
    console.warn('Analytics event failed (non-critical):', error);
  }
};

