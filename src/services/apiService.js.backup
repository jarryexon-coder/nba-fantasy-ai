import axios from 'axios';

const API_BASE_URL = process.env.EXPO_PUBLIC_API_BASE_URL || 'http://10.0.0.183:3000';

const apiService = axios.create({
  baseURL: API_BASE_URL,
  timeout: 10000,
  headers: {
    'Content-Type': 'application/json',
  },
});

// Add baseURL as a property
apiService.baseURL = API_BASE_URL;

// Request interceptor
apiService.interceptors.request.use(
  (config) => {
    console.log(`ðŸ“¡ Making API request to: ${config.baseURL}${config.url}`);
    return config;
  },
  (error) => {
    console.error('âŒ Request error:', error);
    return Promise.reject(error);
  }
);

// Response interceptor
apiService.interceptors.response.use(
  (response) => {
    console.log(`ðŸ“Š Response status: ${response.status} from ${response.config.url}`);
    return response.data;
  },
  (error) => {
    console.error('âŒ API Error:', {
      url: error.config?.url,
      status: error.response?.status,
      message: error.message,
    });
    
    // Return mock data for development if backend fails
    console.log('ðŸ”„ Using mock data as fallback');
    return getMockData(error.config?.url);
  }
);

