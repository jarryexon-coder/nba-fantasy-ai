        ]
      }
    ],
    NHL: [
      {
        id: 1,
        awayTeam: 'Toronto Maple Leafs',
        homeTeam: 'Montreal Canadiens',
        awayScore: 4,
        homeScore: 2,
        period: '3rd',
        timeRemaining: '8:15',
        status: 'Live',
        period: '3rd',
        channel: 'ESPN+',
